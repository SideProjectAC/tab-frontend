{
  "manifest_version": 3,
  "name": "react tab",
  "version": "1.0",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "index.html"
  },

  "permissions": [
    "tabGroups",
    "tabs",
    "favicon",
    "scripting",
    "windows",
    "identity"
  ],
  "host_permissions": ["https://tabcolab.live/api/1.0/*"],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "oauth2": {
    "client_id": "1059887522325-mgt5j9krtsca2ldee6toac62fn5g19ke.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  }
}
