{
  "manifest_version": 3,
  "name": "react tab",
  "version": "1.0",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "index.html"
  },

  "permissions": ["tabGroups", "tabs", "favicon", "scripting", "windows"],
  "host_permissions": ["https://tabcolab.live/api/1.0/*"],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
