{
  "manifest_version": 3,
  "name": "TabColab",
  "version": "0.0.4",
  "icons": {
    "16": "img/tab.png",
    "48": "img/tab.png",
    "128": "img/tab.png"
  },
  "description": "Organize your countless tabs",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["tabs", "favicon", "windows", "identity"],
  "host_permissions": ["https://tabcolab.site/api/1.0/*"],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "oauth2": {
    "client_id": "560502229224-mi0fugbocfd28g611gsrhsmrai6l5ird.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  }
}
